<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:themes">
    <Style x:Key="grid" TargetType="Grid">
        <Setter Property="Background" Value="#957B8D"/>
    </Style>
    <Style x:Key="datepicker" TargetType="DatePicker">
        <Setter Property="Background" Value="#E32636"/>
    </Style>
    <Style x:Key="datagrid" TargetType="DataGrid">
        <Setter Property="Background" Value="#DCDCDC"/>
        <Setter Property="Foreground" Value="#003153"/>
    </Style>
    <Style x:Key="label" TargetType="Label">
        <Setter Property="Foreground" Value="#003153"/>
    </Style>
    <Style x:Key="combobox" TargetType="ComboBox">
        <Setter Property="Background" Value="#2A2C30"/>
        <Setter Property="Foreground" Value="#003153"/>
    </Style>
    <Style x:Key="textbox" TargetType="TextBox">
        <Setter Property="Foreground" Value="#003153"/>
    </Style>
    <Style x:Key="button" TargetType="Button">
        <Setter Property="Background" Value="white"/>
        <Setter Property="Foreground" Value="#003153"/>
    </Style>
</ResourceDictionary>
