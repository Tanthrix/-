<Window x:Class="Messanger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Messanger"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="NicknameTB" Text="Name" Grid.Row="1" FontSize="40px" FontWeight="DemiBold" HorizontalAlignment="Center"/>
        <TextBox x:Name="IpTB" Text="IP" Grid.Row="3" FontSize="40px" FontWeight="DemiBold" HorizontalAlignment="Center"/>
        <Button Content="Connect to chat" Grid.Row="4" FontSize="40px" FontWeight="DemiBold" Click="Button_Click_1"/>
        <Button Content="Create new chat" Grid.Row="2" FontSize="40px" FontWeight="DemiBold" Click="Button_Click"/>
    </Grid>

</Window>
