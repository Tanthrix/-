<UserControl x:Class="Calendar.card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Calendar"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50" MouseDown="hover">
    <UserControl.BorderBrush>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
        </LinearGradientBrush>
    </UserControl.BorderBrush>
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image x:Name="img" Margin="2,20,2,2"/>
        <TextBlock x:Name="tb" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="15" Width="42" HorizontalAlignment="Center" TextAlignment="Center" FontSize="14" Margin="0,4,0,0"/>
    </Grid>
</UserControl>
