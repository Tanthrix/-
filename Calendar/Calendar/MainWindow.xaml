<Window x:Class="Calendar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calendar"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <Button Content=">" HorizontalAlignment="Left" Margin="626,0,0,0" VerticalAlignment="Top" Height="50" Width="64" FontSize="16" Click="Button_Click"/>
        <Button Content="&lt;" HorizontalAlignment="Left" Margin="100,0,0,0" VerticalAlignment="Top" Height="50" Width="64" FontSize="16" Click="Button_Click_1"/>
        <TextBlock x:Name="month" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" TextAlignment="Center" Height="34" Width="198" FontSize="24"/>
        <WrapPanel x:Name="wrappanel" Margin="0,55,0,0" MouseDown="wrappanel_MouseDown"  />
        <DatePicker x:Name="Date" HorizontalAlignment="Left" Margin="585,15,0,0" VerticalAlignment="Top" Width="31" CalendarClosed="Date_CalendarClosed"/>
    </Grid>
</Window>
