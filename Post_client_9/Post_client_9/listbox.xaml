<Page x:Class="Post_client_9.listbox"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:m="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Post_client_9"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="listbox">

    <Grid>
        <ListBox x:Name="lb" d:ItemsSource="{d:SampleData ItemCount=5}" Visibility="Hidden" SelectionChanged="lb_SelectionChanged" FontFamily="Jura" FontSize="16" Foreground="#fff"/>
        <ProgressBar x:Name="pb" Value="0" Minimum="0" Maximum="1000" Margin="25,223,25,223"/>
    </Grid>
</Page>
